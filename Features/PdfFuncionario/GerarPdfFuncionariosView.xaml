<Page
    x:Class="patrimonioDB.Features.PdfFuncionario.GerarPdfFuncionariosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ✅ Cabeçalho com Botão Voltar e Título -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Botão Voltar -->
            <Button 
          Grid.Column="0"
      x:Name="VoltarButton"
       Content="Voltar"
      Click="VoltarButton_Click"
    Background="Transparent"
     BorderThickness="0"
 VerticalAlignment="Center"
      Margin="0,0,20,0"/>

         <!-- Título -->
       <TextBlock 
     Grid.Column="1"
  Text="Gerar PDF de Funcionários" 
    FontSize="28" 
  FontWeight="Bold" 
     VerticalAlignment="Center"/>
   </Grid>

        <StackPanel Grid.Row="1" Spacing="20" MaxWidth="600">
            
            <!-- Tipo de relatório -->
            <StackPanel Spacing="10">
                <TextBlock Text="Tipo de Relatório:" FontWeight="SemiBold" FontSize="16"/>
                <RadioButton x:Name="RadioTabela" Content="Tabela Completa" IsChecked="True"/>
                <RadioButton x:Name="RadioPorSetor" Content="Agrupado por Setor"/>
            </StackPanel>

            <!-- Preview -->
            <StackPanel Spacing="5">
                <TextBlock Text="Total de Funcionários:" FontWeight="SemiBold"/>
                <TextBlock x:Name="TotalFuncionariosText" 
                           Text="-" 
                           FontSize="24" 
                           Foreground="Blue"/>
            </StackPanel>

            <!-- Mensagens -->
            <TextBlock x:Name="MensagemErro"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>

            <TextBlock x:Name="MensagemSucesso"
                       Foreground="Green"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>

            <!-- Loading -->
            <ProgressRing x:Name="LoadingRing"
                          IsActive="False"
                          Visibility="Collapsed"
                          Width="40"
                          Height="40"
                          HorizontalAlignment="Center"/>

            <!-- Botões -->
            <StackPanel Spacing="10">
                <Button x:Name="CarregarButton"
                        Content="Carregar Dados" 
                        Click="CarregarButton_Click"
                        HorizontalAlignment="Stretch"
                        Style="{StaticResource AccentButtonStyle}"/>

                <Button x:Name="GerarPdfButton"
                        Content="Gerar PDF" 
                        Click="GerarPdfButton_Click"
                        HorizontalAlignment="Stretch"
                        IsEnabled="False"/>

                <Button x:Name="AbrirPastaButton"
                        Content="Abrir Pasta de Downloads" 
                        Click="AbrirPastaButton_Click"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>

            <!-- Info -->
            <TextBlock TextWrapping="Wrap" 
                       Foreground="Gray" 
                       FontSize="12">
                <Run Text="O PDF será salvo na pasta Downloads com o nome:"/>
                <LineBreak/>
                <Run Text="funcionarios_[data].pdf" FontStyle="Italic"/>
            </TextBlock>

        </StackPanel>
    </Grid>
</Page>
