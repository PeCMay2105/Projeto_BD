<Page
    x:Class="patrimonioDB.Features.AdminDashboard.AdminDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
   <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecalho -->
        <Grid Grid.Row="0" Padding="20,20,20,10">
        <Grid.ColumnDefinitions>
           <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Titulo e Boas-vindas -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
       <TextBlock 
   Text="Painel do Administrador" 
         FontSize="32" 
      FontWeight="Bold"/>
       <TextBlock 
      x:Name="NomeAdminTextBlock"
      Text="Bem-vindo, Administrador!" 
    FontSize="16" 
           Foreground="Gray"
          Margin="0,5,0,0"/>
    </StackPanel>

   <!-- Botao Logout -->
            <Button 
                Grid.Column="1"
         x:Name="LogoutButton"
          Content="Sair"
 Click="LogoutButton_Click"
             VerticalAlignment="Center"
    Background="Transparent"
          BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
     BorderThickness="1"
          Padding="20,10"/>
        </Grid>

     <!-- Menu Principal com Cards Centralizados -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
            <StackPanel 
        HorizontalAlignment="Center" 
                VerticalAlignment="Center"
    Spacing="20" 
         MaxWidth="900"
          Padding="20,40,20,40">

      <!-- Card: Gestao de Funcionarios -->
     <Border 
    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
    BorderThickness="1"
         CornerRadius="8"
          Padding="30"
         HorizontalAlignment="Stretch">
      <StackPanel Spacing="15">
   <StackPanel Spacing="5">
         <TextBlock 
      Text="Gestao de Funcionarios" 
   FontSize="24" 
    FontWeight="Bold"/>
      <TextBlock 
     Text="Gerencie todos os funcionarios cadastrados no sistema"
   TextWrapping="Wrap"
      Foreground="Gray"
         FontSize="14"/>
     </StackPanel>
      
   <Grid ColumnSpacing="15" RowSpacing="15">
       <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
       <RowDefinition Height="Auto"/>
   <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

      <Button 
 Grid.Column="0"
 Grid.Row="0"
  x:Name="CadastrarFuncionarioButton"
 Content="Cadastrar Funcionario"
   Click="CadastrarFuncionarioButton_Click"
     HorizontalAlignment="Stretch"
     Height="50"
   Style="{StaticResource AccentButtonStyle}"/>

     <Button 
     Grid.Column="1"
  Grid.Row="0"
   x:Name="EditarFuncionarioButton"
          Content="Gerenciar Funcionarios"
 Click="EditarFuncionarioButton_Click"
        HorizontalAlignment="Stretch"
      Height="50"/>

   <!-- Botão Gerar PDF -->
  <Button 
         Grid.Column="0"
       Grid.Row="1"
         x:Name="GerarPdfButton"
   Content="Gerar Relatório PDF"
  Click="GerarPdfButton_Click"
       HorizontalAlignment="Stretch"
         Height="50"
Background="#0078D4"
 Foreground="White"/>

            <!-- Botão Visualizar PDFs -->
          <Button 
      Grid.Column="1"
  Grid.Row="1"
       x:Name="VisualizarPdfsButton"
      Content="Visualizar PDFs Salvos"
        Click="VisualizarPdfsButton_Click"
      HorizontalAlignment="Stretch"
   Height="50"
       Background="#2E7D32"
   Foreground="White"/>
</Grid>
        </StackPanel>
       </Border>

    <!-- Card: Gestao de Patrimonio -->
        <Border 
    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
     BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
       BorderThickness="1"
            CornerRadius="8"
        Padding="30"
        HorizontalAlignment="Stretch">
       <StackPanel Spacing="15">
 <StackPanel Spacing="5">
         <TextBlock 
  Text="Gestao de Patrimonio" 
      FontSize="24" 
          FontWeight="Bold"/>
   <TextBlock 
   Text="Gerencie itens, setores e movimentacoes de patrimonio"
                TextWrapping="Wrap"
            Foreground="Gray"
  FontSize="14"/>
       </StackPanel>
       
  <Button 
           x:Name="GestaoPatrimonioButton"
       Content="Acessar Gestao de Patrimonio"
         Click="GestaoPatrimonioButton_Click"
         HorizontalAlignment="Stretch"
              Height="50"
         Style="{StaticResource AccentButtonStyle}"/>
   </StackPanel>
    </Border>

          <!-- Card: Gestao de Setores -->
                <Border 
       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
         BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
    BorderThickness="1"
        CornerRadius="8"
         Padding="30"
            HorizontalAlignment="Stretch">
        <StackPanel Spacing="15">
        <StackPanel Spacing="5">
          <TextBlock 
  Text="Gestao de Setores" 
    FontSize="24" 
         FontWeight="Bold"/>
     <TextBlock 
      Text="Crie, edite e organize os setores da empresa"
         TextWrapping="Wrap"
       Foreground="Gray"
   FontSize="14"/>
       </StackPanel>
             
       <Button 
     x:Name="GestaoSetoresButton"
            Content="Acessar Gestao de Setores"
      Click="GestaoSetoresButton_Click"
         HorizontalAlignment="Stretch"
                  Height="50"
         Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
     </Border>

        </StackPanel>
        </ScrollViewer>
  </Grid>
</Page>
